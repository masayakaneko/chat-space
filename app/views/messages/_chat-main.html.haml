.chat-main
  .main-header
    .main-header__left
      .main-header__left__current-group
        = @group.name
      .main-header__left__member-list
        Member :
        - @group.users.each do |user|
          = user.name
    .main-header__right
      = link_to edit_group_path(@group), class: "main-header__right__edit" do
        Edit
  .messages
    = render @messages
  .main-footer
    .footer__form
      = form_for [@group, @message] do |f|
        .form
          .form__content
            = f.text_field :content, class: 'form__message', placeholder: 'type a message'
            .form__mask
              = f.label :image, class: 'image-file__icon' do
                = icon('fas', 'fa fa-image')
                = f.file_field :image, class: 'hidden'
          .form__send-btn
            = f.submit 'Send', class: 'form__submit'